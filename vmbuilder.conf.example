#
# [disk]
#

rootsize=$((1024 * 10))
swapsize=0

#
# [distro]
#

distro_name=centos
distro_ver=6

keepcache=0
selinux=0

hostname=wakame-vdc-1box

rootpass= # must be empty to lock root account
devel_user=centos
devel_pass=centos

ssh_key=
ssh_user_key=
sshd_passauth=yes

fstab_type=label

sudo_requiretty=0

xexecscript="$(pwd)/xexecscript.d/*.sh"
copy="
 $(pwd)/copy.txt
 $(pwd)/copy.${VDC_HYPERVISOR}.txt
 $(pwd)/copy.${VDC_EDGE_NETWORKING}.txt
 $([[ -f "$(pwd)/copy.local.txt" ]] && echo $(pwd)/copy.local.txt)
"
firstboot=  # vmconfig/firstboot.sh
firstlogin= # vmconfig/firstlogin.sh

addpkg="
 git
 vim-minimal screen git make sudo ntp ntpdate
 man
 nmap lsof strace tcpdump traceroute telnet ltrace dnsutils sysstat nc wireshark
"

nictab=nictab.${VDC_EDGE_NETWORKING}.txt
#routetab= # vmconfig/routetab.txt

## [wakame-vdc] internal system configuration script

#
# [hypervisor]
#

hypervisor=kvm

#
# [kvm]
#

name=vdc1box
raw=1box-${VDC_HYPERVISOR}.${VDC_EDGE_NETWORKING}.$(arch).raw
image_path=${raw}

cpu_num=  # ; 2
mem_size= # ;$((1024 * 2))

vnc_addr= # ; 127.0.0.1
vnc_port= # ; 101

serial_addr= # ; 127.0.0.1
serial_port= # ; 5555

monitor_addr= # ; 127.0.0.1
monitor_port= # ; 4444
