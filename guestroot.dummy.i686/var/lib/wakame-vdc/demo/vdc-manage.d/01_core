# host node (hn-*)

host add hva.1box32 --force --uuid hn-1box32 --cpu-cores 100 --memory-size 400000 --hypervisor dummy --arch x86
host add hva.1box64 --force --uuid hn-1box64 --cpu-cores 100 --memory-size 400000 --hypervisor dummy --arch x86_64

# resource mapping

resourcegroup map hng-shhost hn-1box32
resourcegroup map hng-shhost hn-1box64
